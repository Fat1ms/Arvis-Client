# Auto detect text files and perform LF normalization
* text=auto

# Force LF for source files
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Force CRLF for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.db binary
*.sqlite binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary
*.wav binary
*.mp3 binary
*.ogg binary
